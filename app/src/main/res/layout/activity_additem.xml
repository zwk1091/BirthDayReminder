<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:text="姓名："
        android:id="@+id/nameText"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        app:layout_constraintLeft_toRightOf="@id/nameText"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生日："
        android:id="@+id/birthdayText"
        app:layout_constraintTop_toBottomOf="@id/nameText"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/birthday"
        app:layout_constraintLeft_toRightOf="@id/birthdayText"
        app:layout_constraintTop_toBottomOf="@id/nameText"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="礼物： "
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/birthdayText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/giftText"
        />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/gift"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/giftText"
        app:layout_constraintTop_toBottomOf="@id/birthdayText"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/giftText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/addtoDB"
        android:text="增加"
        android:background="@android:color/holo_green_light"/>
</android.support.constraint.ConstraintLayout>